
<%= flash_message %>

<h3><%= @leave.leave_type %></h3>
<hr />
<% if @leave_details.any? %>
  <table class="table timesheets leave_details">
    <thead>
      <tr>
        <th>Leave Date</th>
        <th>Leave Type</th>
        <th>Details</th>
        <th>Day(s)</th>
        <th>Period</th>
        <th>Responder</th>
        <th>Status</th>
        <th>Response Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @leave_details.each do |ld| %>
      <tr>
        <td><%= format_date ld.leave_date %></td>
        <td><%= ld.leave_type %></td>
        <td><%= ld.details %></td>
        <td class="mins"><%= ld.leave_unit %></td>
        <td class="mins"><%= ld.class::LEAVE_PERIOD[ld.period] %></td>
        <td><%= show_responders(ld) %></td>
        <td><%= ld.status %></td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      <tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="well">No data found.</div>
<% end %>
